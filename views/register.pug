extends layout.pug
block content
    h1="Register"
        form(method='POST' action='/register')
                div.form-group
                    label(for='username') Username:  
                    input(type='text', placeholder='Username' name="username")
                div.form-group
                    label(for='password') Password: 
                    input(type='Password', placeholder='Password' name='password')
                div.form-group
                    label(for='description') Email:
                    input(type='Email', placeholder='Email' name='email')
                div.form-group
                    label(for='age') Age:  
                    input(type='text', placeholder='Age' name='age')
                div.form-group
                    label(for='question1') Question 1:
                    input(type='text', placeholder='Answer 1' name='answer1')
                div.form-group
                    label(for='question2') Question 2: 
                    input(type='text', placeholder='Answe2' name='answer2')
                div.form-group
                    label(for='question3') Question 3: 
                    input(type='text', placeholder='Answer 3' name='answer3')
                
                div.form-group
                button.btn.btn-primary(type='submit') Register



