extends layout.pug
block content
    div="Register"
        form(method='POST' action='/register')
                div.form-group
                    label(for='username') Username:  
                    input(type='text', placeholder='Username' name="username")
                div.form-group
                    label(for='password') Password: 
                    input(type='Password', placeholder='Password' name='password')
                div.form-group
                    label(for='description') Email:
                    input(type='Email', placeholder='Email' name='email')
                div.form-group
                    label(for='age') Age:  
                    input(type='text', placeholder='Age' name='age')
                div.form-group
                    label() Vanilla
                    label(class="switch")
                        input(type="checkbox" name="flavor")
                        span(class="slider round")
                    label() Chocolate
                div.form-group
                    label() Call
                    label(class="switch")
                        input(type="checkbox" name="message")
                        span(class="slider round")
                    label() Text
                div.form-group
                    label() Android
                    label(class="switch")
                        input(type="checkbox" name="phonetype")
                        span(class="slider round")
                    label() iOS
                div.form-group
                button.btn.btn-primary(type='submit') Register



